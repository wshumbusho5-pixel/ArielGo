# ==================================
# ARIELGO PRODUCTION ENVIRONMENT
# ==================================
# Copy this file to .env on your EC2 server
# Fill in all values before deploying

# ==================================
# SERVER CONFIGURATION
# ==================================
NODE_ENV=production
PORT=3001

# Your domain name (without http://)
DOMAIN=areliga.com

# ==================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==================================
# Use PostgreSQL in production (not SQLite!)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arielgo
DB_USER=arielgo_user
DB_PASSWORD=  # Will be auto-generated during deployment

# ==================================
# STRIPE PAYMENT CONFIGURATION
# ==================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# ==================================
# PRICING (in cents)
# ==================================
PRICE_STANDARD=3200
PRICE_SAMEDAY=4200
PRICE_RUSH=5000

# ==================================
# SERVICE AREA
# ==================================
SERVICE_AREA=University District, Seattle, WA

# ==================================
# EMAIL CONFIGURATION (Optional)
# ==================================
# For sending booking confirmations
# Gmail example - enable "App Passwords" in your Google account
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=ArielGo <noreply@yourdomain.com>

# ==================================
# SMS CONFIGURATION (Optional)
# ==================================
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ==================================
# AI ASSISTANT CONFIGURATION
# ==================================
# Get from: https://platform.openai.com/api-keys
# Set monthly budget limit to $5 in OpenAI dashboard!
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE

# ==================================
# SESSION SECURITY
# ==================================
# Generate a random secret: openssl rand -base64 32
EXPRESS_SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_MINIMUM

# ==================================
# ADMIN CONFIGURATION
# ==================================
# Flask admin dashboard secret
# Generate: python3 -c "import secrets; print(secrets.token_hex(32))"
ADMIN_SECRET_KEY=CHANGE_THIS_TO_RANDOM_HEX_STRING

# ==================================
# SECURITY NOTES
# ==================================
# 1. NEVER commit this file to git!
# 2. Keep backups in a secure location
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords
# 5. Enable 2FA on all external services (Stripe, OpenAI, etc.)
